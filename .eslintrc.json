{
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "plugins": ["react", "immutable"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "jasmine": true,
    "jest": true,
    "mocha": true
  },
  "globals": {
    "React$Element": true,
    "React$Component": true,
    "SyntheticClipboardEvent": true,
    "SyntheticCompositionEvent": true,
    "SyntheticDragEvent": true,
    "SyntheticEvent": true,
    "SyntheticFocusEvent": true,
    "SyntheticInputEvent": true,
    "SyntheticKeyboardEvent": true,
    "SyntheticMouseEvent": true,
    "SyntheticTouchEvent": true,
    "SyntheticUIEvent": true,
    "SyntheticWheelEvent": true
  },
  "rules": {
    "global-require": 0,
    "arrow-parens": ["error", "as-needed"],
    "no-confusing-arrow": "off",
    "react/jsx-indent": "warn",
    "no-var": 2,
    "no-underscore-dangle": "warn",
    "prefer-const": 2,
    "no-undef": 2,
    "no-unused-vars": 2,
    "camelcase": "off",
    "no-console": 1,
    "new-cap": 1,
    "strict": 0,
    "no-param-reassign": 0,
    "react/prop-types": 0,
    "react/jsx-filename-extension": 0,
    "import/named": 2,
    "import/prefer-default-export": 0,
    "import/no-extraneous-dependencies": 0,
    "immutable/no-let": 0,
    "immutable/no-this": 1,
    "immutable/no-mutation": 0,
    "react/jsx-no-target-blank": 1,
    "react/prefer-stateless-function": 0,
    "react/require-default-props": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "jsx-a11y/anchor-has-content": 0,
    "jsx-a11y/anchor-is-valid": 0,
    "react/no-children-prop": 0,
    "react/no-unused-prop-types": 0,
    "react/forbid-prop-types": 0,
    "no-useless-escape": 0,
    "no-use-before-define": 0,
    "jsx-a11y/click-events-have-key-events": 0,
    "react/no-array-index-key": 0,
    "jsx-a11y/alt-text": 1,
    "max-len": 0,
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "ignore"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.js"
      }
    }
  }
}
